<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdk.impl.view.widget.TuActionSheetView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/lsq_maskBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lsq_actionsheet_mask_bg" />

    <LinearLayout
        android:id="@+id/lsq_sheetTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lsq_titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lsq_actionsheet_space_button"
            android:background="@drawable/tusdk_view_widget_actionsheet_top_radius"
            android:gravity="center"
            android:padding="14dp"
            android:textColor="@color/lsq_actionsheet_title_color"
            android:textSize="@dimen/lsq_font_size_28" />

        <org.lasque.tusdk.core.view.widget.button.TuSdkButton
            android:id="@+id/lsq_cancelButton"
            style="@style/lsq_actionsheetButton"
            android:layout_marginBottom="@dimen/lsq_actionsheet_space_bottom"
            android:background="@drawable/tusdk_view_widget_actionsheet_radius"
            android:text="@string/lsq_nav_cancel" />
    </LinearLayout>

</org.lasque.tusdk.impl.view.widget.TuActionSheetView>
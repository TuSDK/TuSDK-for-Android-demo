<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkdemo.views.FilterConfigSeekbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView 
        android:id="@+id/lsq_filterValueView"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:lines="1"
        android:text="50%"
        android:textColor="@color/lsq_seekbar_drag_color"
        android:textSize="12sp"/>

    <include
        android:id="@+id/lsq_seekView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:minHeight="30dp"
        android:layout_toRightOf="@+id/lsq_titleWrapView"
        android:layout_toLeftOf="@id/lsq_filterValueView"
        android:layout_centerVertical="true"
        layout="@layout/widget_seekbar" />

    <RelativeLayout
        android:id="@+id/lsq_titleWrapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/lsq_titleView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/lsq_filter_set_mixied"
            android:textColor="@color/lsq_seekbar_drag_color"
            android:textSize="14sp" />

    </RelativeLayout>

</org.lasque.tusdkdemo.views.FilterConfigSeekbar>
<?xml version="1.0" encoding="utf-8"?>
<!-- 相机预览组件 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsq_background_editor" >

    <!-- 显示的图片视图 -->

    <org.lasque.tusdkpulse.core.view.TuSdkImageView
        android:id="@+id/lsq_cameraPreviewImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <RelativeLayout
        android:id="@+id/lsq_camera_preview_actionWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp" 
        android:layout_marginBottom="30dp">

        <org.lasque.tusdkpulse.core.view.widget.button.TuSdkTextButton
            android:id="@+id/lsq_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/lsq_style_default_camera_preview_cancel_icon"
            android:gravity="center_horizontal"
            android:textColor="#3e3a39"
            android:textSize="12sp" />

        <org.lasque.tusdkpulse.core.view.widget.button.TuSdkTextButton
            android:id="@+id/lsq_saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/lsq_style_default_camera_preview_confrim_icon"
            android:gravity="center_horizontal"
            android:textColor="#3e3a39"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
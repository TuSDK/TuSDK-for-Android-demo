<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkpulse.impl.view.widget.TuSeekBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/lsq_seekBottomView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/tusdk_view_widget_seekbar_bottom_bg" />

    <View
        android:id="@+id/lsq_seekTopView"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="@drawable/tusdk_view_widget_seekbar_top_bg" />

    <View
        android:id="@+id/lsq_seekDrag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/tusdk_view_widget_seekbar_drag" />

</org.lasque.tusdkpulse.impl.view.widget.TuSeekBar>
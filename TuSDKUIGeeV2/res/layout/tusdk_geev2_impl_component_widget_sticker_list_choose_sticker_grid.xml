<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <RelativeLayout
        android:id="@+id/lsq_posterWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <org.lasque.tusdk.core.view.TuSdkImageView
            android:id="@+id/lsq_posterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lsq_geev2_oval_shadow_drawable"
            android:src="@drawable/lsq_geev2_style_default_edit_icon_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lsq_posterView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="@string/lsq_sticker_add"
            android:textColor="@color/lsq_color_blue"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
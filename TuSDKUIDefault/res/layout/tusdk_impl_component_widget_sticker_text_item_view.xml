<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkpulse.impl.components.widget.sticker.StickerTextItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lsq_sticker_turnButton" >

        <org.lasque.tusdkpulse.core.view.TuSdkTextView
            android:id="@+id/lsq_sticker_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shadowDx="1.5"
		    android:shadowDy="1.3"
		    android:shadowRadius="1.6"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:gravity="center"/>

        <org.lasque.tusdkpulse.core.view.widget.button.TuSdkImageButton
            android:id="@+id/lsq_sticker_cancelButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="center"
            android:src="@drawable/lsq_style_default_edit_icon_text_drag_cancel" />

        <org.lasque.tusdkpulse.core.view.widget.button.TuSdkImageButton
            android:id="@+id/lsq_sticker_turnButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/lsq_style_default_edit_icon_text_drag_rotate_scale" />
    </RelativeLayout>

    <View
        android:id="@+id/lsq_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <org.lasque.tusdkpulse.core.view.widget.button.TuSdkImageButton
        android:id="@+id/lsq_sticker_resizeButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:scaleType="center"
        android:src="@drawable/lsq_style_default_edit_icon_text_drag_resize"
        android:layout_toRightOf="@+id/lsq_view"
        android:visibility="gone"
/>
    
</org.lasque.tusdkpulse.impl.components.widget.sticker.StickerTextItemView>
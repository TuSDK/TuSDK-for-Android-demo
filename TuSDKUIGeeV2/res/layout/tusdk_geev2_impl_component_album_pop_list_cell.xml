<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdk.geev2.impl.components.album.TuAlbumPopListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lsq_geev2_background_default_cell" >

    <ImageView
        android:id="@+id/lsq_posterView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/lsq_geev2_component_album_pop_photo_bg_drawable"
        android:scaleType="centerCrop"
        android:layout_margin="8dp"
    />

    <TextView
        android:id="@+id/lsq_titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toRightOf="@+id/lsq_posterView"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="200dp"
        android:text="@string/lsq_text"
        android:textColor="#3e3a39"
        android:textSize="18sp" />

</org.lasque.tusdk.geev2.impl.components.album.TuAlbumPopListCell>
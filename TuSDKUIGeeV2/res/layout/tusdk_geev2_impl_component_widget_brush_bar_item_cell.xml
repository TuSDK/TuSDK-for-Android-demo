<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkpulse.geev2.impl.components.widget.smudge.BrushBarItemCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp">

    <org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout
        android:id="@+id/lsq_item_wrap"
        android:layout_width="65dp"
        android:layout_height="match_parent" >

        <org.lasque.tusdkpulse.core.view.TuSdkImageView
            android:id="@+id/lsq_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout
            android:id="@+id/lsq_item_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lsq_geev2_brush_cell_selected_drawable" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@drawable/lsq_style_default_edit_icon_item_selected" />
        </org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout>

        <TextView
            android:id="@+id/lsq_item_title"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:background="@drawable/lsq_geev2_brush_cell_item_title_bg_drawable"
            android:text="@string/lsq_text"
            android:textColor="@color/lsq_color_white"
            android:textSize="12sp" />
    </org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout>

    
    
      <org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout
            android:id="@+id/lsq_item_brush_eraser_wrap"
            android:layout_width="match_parent"
            android:layout_height="65dp" >

            <ImageView
                android:id="@+id/lsq_brush_item_eraser_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/lsq_geev2_oval_shadow_drawable"
                android:src="@drawable/lsq_geev2_style_default_brush_item_eraser" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/lsq_brush_Eraser"
                android:textColor="@color/lsq_color_blue"
                android:textSize="12sp" />
        </org.lasque.tusdkpulse.core.view.TuSdkRelativeLayout>

    
    <org.lasque.tusdkpulse.core.view.widget.button.TuSdkImageButton
        android:id="@+id/lsq_item_remove_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:background="@color/lsq_filter_group_remove_bg"
        android:scaleType="center"
        android:src="@drawable/lsq_style_default_edit_remove" />

</org.lasque.tusdkpulse.geev2.impl.components.widget.smudge.BrushBarItemCell>